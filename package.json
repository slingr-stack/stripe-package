{
    "label": "Stripe",
    "name": "stripe",
    "dependencies": [
        {
            "type": "service",
            "name": "http",
            "version": "v1.3.7",
            "instanceId": "shared"
        }
    ],
    "configuration": [
        {
            "label": "Publishable Key",
            "name": "publishableKey",
            "type": "text",
            "required": true
        },
        {
            "label": "Secret Key",
            "name": "secretKey",
            "type": "password",
            "required": true
        },
        {
            "label": "Webhook URL",
            "name": "webhookUrl",
            "type": "label",
            "value": "@config.WEBHOOK_URL"
        },
        {
            "label": "Check Webhooks Signature",
            "name": "checkWebhooksSignature",
            "type": "toggle",
            "defaultValue": false
        },
        {
            "label": "Webhooks Signing Secret",
            "name": "webhooksSigningSecret",
            "type": "password",
            "required": "config.checkWebhooksSignature==true"
        },
        {
            "label": "Stripe API Url",
            "name": "stripeBaseUrl",
            "type": "label",
            "value": "https://api.stripe.com"
        }
    ],
    "events": [
        {
            "label": "Webhook",
            "name": "webhook",
            "description": "Happens when a Stripe hits the endpoint URL."
        }
    ],
    "metadata": [
        {
            "type": "script",
            "namespace": "api",
            "path": "/scripts/api.js"
        },
        {
            "type": "script",
            "namespace": "utils",
            "path": "/scripts/utils.js"
        },
        {
            "type": "listener",
            "namespace": "webhook",
            "path": "/listeners/webhook.js"
        }
    ]
}